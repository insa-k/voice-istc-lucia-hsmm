#Auto-generated config file for voice istc-lucia-hsmm

name = istc-lucia-hsmm
it-voice.version = 4.3.0

voice.version = 4.3.0

# Declare "group names" as component that other components can require.
# These correspond to abstract "groups" of which this component is an instance.
provides = \
         it-voice \
         hmm-voice

# List the dependencies, as a whitespace-separated list.
# For each required component, an optional minimum version and an optional
# download url can be given.
# We can require a component by name or by an abstract "group name"
# as listed under the "provides" element.
requires = \
   it \
   marybase 

requires.marybase.version = 4.3.0
requires.it.version = 4.3.0
requires.it.download = http://mary.dfki.de/download/mary-install-4.x.x.jar
requires.hmm.version = 4.3.0

####################################################################
####################### Module settings  ###########################
####################################################################
# For keys ending in ".list", values will be appended across config files,
# so that .list keys can occur in several config files.
# For all other keys, values will be copied to the global config, so
# keys should be unique across config files.

hmm.voices.list = \
   istc-lucia-hsmm

# If this setting is not present, a default value of 0 is assumed.
voice.istc-lucia-hsmm.wants.to.be.default = 0

# Set your voice specifications
voice.istc-lucia-hsmm.gender = female
voice.istc-lucia-hsmm.locale = it
voice.istc-lucia-hsmm.domain = general
voice.istc-lucia-hsmm.samplingRate = 16000

# HMM Voice-specific parameters 
# parameters used during models training 
# MGC: stage=gamma=0 alpha=0.42 linear gain (default) 
# LSP: gamma>0  
#          LSP: gamma=1 alpha=0.0  linear gain/log gain 
#      Mel-LSP: gamma=1 alpha=0.42 log gain 
#      MGC-LSP: gamma=3 alpha=0.42 log gain 
voice.istc-lucia-hsmm.alpha = 0.42
voice.istc-lucia-hsmm.gamma = 0
voice.istc-lucia-hsmm.logGain = false

# Parameter beta for postfiltering 
voice.istc-lucia-hsmm.beta = 0.0

# HMM Voice-specific files
# Information about trees
voice.istc-lucia-hsmm.Ftd = MARY_BASE/lib/voices/istc-lucia-hsmm/tree-dur.inf
voice.istc-lucia-hsmm.Ftf = MARY_BASE/lib/voices/istc-lucia-hsmm/tree-lf0.inf
voice.istc-lucia-hsmm.Ftm = MARY_BASE/lib/voices/istc-lucia-hsmm/tree-mgc.inf
voice.istc-lucia-hsmm.Fts = MARY_BASE/lib/voices/istc-lucia-hsmm/tree-str.inf

# Information about means and variances PDFs 
voice.istc-lucia-hsmm.Fmd = MARY_BASE/lib/voices/istc-lucia-hsmm/dur.pdf
voice.istc-lucia-hsmm.Fmf = MARY_BASE/lib/voices/istc-lucia-hsmm/lf0.pdf
voice.istc-lucia-hsmm.Fmm = MARY_BASE/lib/voices/istc-lucia-hsmm/mgc.pdf
voice.istc-lucia-hsmm.Fms = MARY_BASE/lib/voices/istc-lucia-hsmm/str.pdf

# Information about Global Mean and Variance PDFs
voice.istc-lucia-hsmm.useGV = true
voice.istc-lucia-hsmm.maxMgcGvIter = 200
voice.istc-lucia-hsmm.maxLf0GvIter = 200
voice.istc-lucia-hsmm.Fgvf = MARY_BASE/lib/voices/istc-lucia-hsmm/gv-lf0-littend.pdf
voice.istc-lucia-hsmm.Fgvm = MARY_BASE/lib/voices/istc-lucia-hsmm/gv-mgc-littend.pdf
voice.istc-lucia-hsmm.Fgvs = MARY_BASE/lib/voices/istc-lucia-hsmm/gv-str-littend.pdf

# A context features file example for start-up testing.
voice.istc-lucia-hsmm.FeaFile = MARY_BASE/lib/voices/istc-lucia-hsmm/s1031.pfeats

# Tricky phones file in case there were problematic phones during training, empty otherwise.
voice.istc-lucia-hsmm.trickyPhonesFile = MARY_BASE/lib/voices/istc-lucia-hsmm/trickyPhones.txt

# Information about Mixed Excitation
voice.istc-lucia-hsmm.useMixExc = true

# Filters for mixed excitation 
# File format: one column with all the taps, where the number of taps per filter = numTaps/numFilters 
voice.istc-lucia-hsmm.Fif = MARY_BASE/lib/voices/istc-lucia-hsmm/mix_excitation_filters.txt
# Number of filters in bandpass bank
voice.istc-lucia-hsmm.in = 5

# Information about acousticModels (if true allows prosody modification specified in MARYXML input)
voice.istc-lucia-hsmm.useAcousticModels = true

# acoustic models to use (HMM models or carts from other voices can be specified)
#(uncoment to allow prosody modification specified in MARYXML input)
voice.istc-lucia-hsmm.acousticModels = duration F0

voice.istc-lucia-hsmm.duration.model = hmm
voice.istc-lucia-hsmm.duration.data = MARY_BASE/conf/it-istc-lucia-hsmm.config
voice.istc-lucia-hsmm.duration.attribute = d

voice.istc-lucia-hsmm.F0.model = hmm
voice.istc-lucia-hsmm.F0.data = MARY_BASE/conf/it-istc-lucia-hsmm.config
voice.istc-lucia-hsmm.F0.attribute = f0

